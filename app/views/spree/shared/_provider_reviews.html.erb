<div class="clear" />

<div class="row columns six alpha"  >
  <div itemprop="avg_rating">
    <%= show_rate @provider.avg_rating %>
  </div>

  <% if !@provider.reviews.empty? %>
    <div class="stars_summary">
      <ul>
        <li><%= "5 - #{@provider.rating_count 5}" %></li>
        <li><%= "4 - #{@provider.rating_count 4}" %></li>
        <li><%= "3 - #{@provider.rating_count 3}" %></li>
        <li><%= "2 - #{@provider.rating_count 2}" %></li>
        <li><%= "1 - #{@provider.rating_count 1}" %></li>
      </ul>
    </div>
  <% end %>

  <% for review in @provider.reviews %>
        <%= render :partial => 'spree/shared/review', :locals => {:review => review} %>
  <% end %>

  <%= link_to t('rate_this_provider'), new_provider_review_path(@provider), :class => "button",
    :rel => "nofollow,noindex" %>

</div>