<div class="clear" />

<div class="row columns six alpha"  >
  <div itemprop="avg_rating">
    <%= show_rate @product.avg_rating %>
  </div>

  <% if !@product.reviews.empty? %>
    <div class="stars_summary">
      <ul>
        <li><%= "5 - #{@product.rating_count 5}" %></li>
        <li><%= "4 - #{@product.rating_count 4}" %></li>
        <li><%= "3 - #{@product.rating_count 3}" %></li>
        <li><%= "2 - #{@product.rating_count 2}" %></li>
        <li><%= "1 - #{@product.rating_count 1}" %></li>
      </ul>
    </div>
  <% end %>

  <% for review in @product.reviews %>
        <%= render :partial => 'spree/shared/review', :locals => {:review => review} %>
  <% end %>

  <%= link_to Spree.t('rate_this_product'), new_product_review_path(@product), :class => "button",
    :rel => "nofollow,noindex" %>

</div>